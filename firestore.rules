rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Productos: lectura pública, escritura solo autenticados
    match /productos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Configuración: lectura y escritura solo autenticados
    match /configuracion/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Cotizaciones: lectura y escritura solo autenticados
    match /cotizaciones/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
